// normalize
html, body
	position relative
	display block
	width 100%
	height 100%
	min-height 100%
	margin 0
	padding 0
	touch-action manipulation
	-ms-touch-action manipulation
	-webkit-text-size-adjust none
p
	margin 0
	user-select none

div
	box-sizing border-box



// Variables
// fonts
$font 					= {}
$font.family 			= {}
$font.size 				= {}
$font.family.default 	= 'Open Sans Condensed', sans-serif
$font.size.default		= 17px

// colors
$color					= {}
$color.text				= {}

$color.normal 			= #03a9f4
$color.dark				= #0288d1
$color.light			= #b3e5fc
$color.accent			= #FFCD01

$color.text.normal		= #212121
$color.text.light		= #757575

// rgb(0, 156, 203)


// main
body
	font-family: $font.family.default
	background-color: #5b5b5b
	text-align center

.search-form
	position relative
	display block
	width 510px
	margin 20px auto 30px
	box-sizing border-box
	&>*
		display inline-block
		font-size 24px
		color #5b5b5b
	.input-list
		position relative
		width 100%
	input
		display block
		width 100%
		padding 5px 10px
		font-size 24px
		font-family: $font.family.default
		background-color #FFF
		border none
		box-shadow 1px 3px 10px #111
		box-sizing border-box
		z-index 1
	button
		position absolute
		width 25px
		height 25px
		top 0
		right 10px
		bottom 0
		margin auto
		font-size 24px
		border none
		background-color transparent
		cursor pointer
		opacity .4
		transition all .2s
		z-index 2
		&:hover
			opacity 1
			// transform scale(1.05)
		svg
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			margin auto


.widget
	display block
	margin 0 auto 20px
	font-size 0
	color #5b5b5b
	background-color: $color.accent
	border-radius 2px
	box-sizing border-box
	box-shadow 1px 3px 10px #111
	width 100px
	&.big
		width 510px
		&>*
			position relative
			display inline-block
			vertical-align top
			padding 20px
			font-size 0
		&.night
			background-color: #009CCB
			color #101010
		.widget__left
			&:after
				border-right 1px dashed #101010

	&.small
		display inline-block
		width 94px 				// (510 - 40) / 5
		margin-right 10px
		&:last-of-type
			margin-right 0
		&>*
			width 100%
			padding 5px 10px 0
			text-align left
		&.widget__left
			&:after
				display none

		p.temp-range
			font-weight bold

	
	&__left
		width 40%
		&:after
			content ''
			position absolute
			top 0
			right 0
			bottom 0
			margin auto
			height 90%
			width 1px
			border-right 1px dashed #5b5b5b
	
	&__right
		width 60%
		&>*
			display inline-block
			width 50%
			vertical-align middle


	p.status
		font-size 21px
		line-height 24px
		height 24px
		font-weight bold
		text-align right

	&__info
		font-size 0
		padding-top 10px
		p
			height 24px
			text-align left
			font-size 21px
			line-height 24px
			margin-bottom 10px
			span
				&:not(.icon)
					font-size 16px
		i
			width 30px
			text-align center

		.temp
			font-size 70px
			line-height 75px
			height 75px
			line-height 1
			font-weight bold


.icon
	display inline-block
	&--big
		display block
		font-size 110px
		color #FFF
		text-shadow 1px 2px 2px #212121
	&--small
		font-size 25px
		color #FFF
		text-shadow 1px 1px 1px #212121