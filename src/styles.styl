
// fonts
$font 					= {}
$font.family 			= {}
$font.size 				= {}
$font.family.default 	= 'Open Sans Condensed', sans-serif
$font.size.default		= 17px

// colors
$color					= {}
$color.text				= {}

$color.normal 			= #03a9f4
$color.dark				= #0288d1
$color.light			= #b3e5fc
$color.accent			= #FFCD01

$color.text.normal		= #212121
$color.text.light		= #757575


body
	font-family: $font.family.default
	background-color: #5b5b5b

	.search-bar
		display block
		width 300px
		padding 5px 10px
		margin 10px auto
		font-size 25px
		font-family: $font.family.default
		box-sizing border-box

	.forecast
		width 300px
		height 340px
		margin 20px auto
		color #FFF
		background-color: $color.accent
		border-radius 2px
		box-shadow 1px 3px 10px #111
		padding 10px 20px
		box-sizing border-box
		&__info
			font-size 0
			color #5b5b5b
			padding-top 10px
			&>*
				position relative
				width 50%
				display inline-block
				vertical-align top
			p
				font-size 25px
				margin 0
				margin-bottom 0px

			.current-temp
				font-size 70px
				line-height 1
				font-weight bold
			
			&--main
				&:after
					content ''
					position absolute
					top 0
					bottom 0
					right 20px
					width 2px
					border-right 1px dashed #5b5b5b

			
			&--additional
				p
					font-size 22px
					margin-bottom 10px

			.icon
				padding-right 10px


	.icon
		display inline-block
		&--main
			position relative
			display block
			margin 0 auto 20px
			font-size 120px
			color #FFF
			text-align center
			text-shadow 1px 1px 5px #5b5b5b
			&:after
				content ''
				position absolute
				left 0
				right 0
				margin auto
				bottom -20px
				width 100%
				height 2px
				// background-color #5b5b5b
				border-bottom 1px dashed #5b5b5b