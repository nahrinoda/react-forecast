// normalize
html, body
	position relative
	display block
	width 100%
	height 100%
	min-height 100%
	margin 0
	padding 0
	touch-action manipulation
	-ms-touch-action manipulation
	-webkit-text-size-adjust none
p
	margin 0
	user-select none

div
	box-sizing border-box



// Variables
// fonts
$font 					= {}
$font.family 			= {}
$font.size 				= {}
$font.family.default 	= 'Open Sans Condensed', sans-serif
$font.size.default		= 17px

// colors
$color					= {}
$color.text				= {}

$color.normal 			= #03a9f4
$color.dark				= #0288d1
$color.light			= #b3e5fc
$color.accent			= #FFCD01

$color.text.normal		= #212121
$color.text.light		= #757575

// rgb(0, 156, 203)


// main
body
	font-family: $font.family.default
	background-color: #5b5b5b


.search-bar
	display block
	width 300px
	padding 5px 10px
	margin 10px auto
	font-size 25px
	font-family: $font.family.default
	box-sizing border-box


.widget
	margin 20px auto
	font-size 0
	color #5b5b5b
	background-color: $color.accent
	border-radius 2px
	box-sizing border-box
	box-shadow 1px 3px 10px #111
	width 100px
	&.main
		width 510px
	&.night
		background-color: #009CCB
		color #101010

	&>*
		position relative
		display inline-block
		vertical-align top
		padding 20px
		font-size 0
	
	&__left
		width 40%
		&:after
			content ''
			position absolute
			top 0
			right 0
			bottom 0
			margin auto
			height 90%
			width 1px
			border-right 1px dashed #5b5b5b
	
	&__right
		width 60%
		&>*
			display inline-block
			width 50%
			vertical-align middle


	p.status
		font-size 21px
		line-height 24px
		height 24px
		font-weight bold
		text-align right

	&__info
		font-size 0
		padding-top 10px
		p
			font-size 21px
			line-height 24px
			height 24px
			margin-bottom 10px
			span
				&:not(.icon)
					font-size 16px
		i
			width 30px
			text-align center

		.temp
			font-size 70px
			line-height 75px
			height 75px
			line-height 1
			font-weight bold


.icon
	display inline-block
	&--big
		display block
		font-size 110px
		color #FFF
		text-shadow 1px 2px 2px #212121